{
    "$metadata": {
        "type": "UniquenessCredential",
        "uris": {
            "jsonLdContext": "https://raw.githubusercontent.com/Ash20pk/privado-poc/refs/heads/main/public/schemas/json-ld/UniquenessCredential.jsonld"
        },
        "version": "0.01"
    },
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Proof of Unique Human Credential",
    "title": "Uniqueness Credential",
    "properties": {
        "@context": {
            "type": [
                "string",
                "array",
                "object"
            ]
        },
        "expirationDate": {
            "format": "date-time",
            "type": "string"
        },
        "id": {
            "type": "string"
        },
        "issuanceDate": {
            "format": "date-time",
            "type": "string"
        },
        "issuer": {
            "type": [
                "string",
                "object"
            ],
            "format": "uri",
            "properties": {
                "id": {
                    "format": "uri",
                    "type": "string"
                }
            },
            "required": [
                "id"
            ]
        },
        "type": {
            "type": [
                "string",
                "array"
            ],
            "items": {
                "type": "string"
            }
        },
        "credentialSubject": {
            "description": "Stores the data of the credential",
            "title": "Credential subject",
            "properties": {
                "id": {
                    "description": "Stores the DID of the subject that owns the credential",
                    "title": "Credential subject ID",
                    "format": "uri",
                    "type": "string"
                },
                "captureMethod": {
                    "description": "capture method used to determine liveness",
                    "enum": [
                        "activePhoto",
                        "inPersonCheck",
                        "other"
                    ],
                    "title": "captureMethod",
                    "type": "string"
                },
                "userHash": {
                    "description": "Unique user value or id (varies according to each issuer)",
                    "title": "userHash",
                    "type": "string"
                },
                "reputationLevel": {
                    "description": "Reputation level of the user based on the number of verifications done, can increase over time for example: 1000, 2000, etc based on the user showing repeated successful checks",
                    "title": "reputationLevel",
                    "type": "integer"
                },
                "lastVerificationDate": {
                    "description": "Time stamp in integer format of when uniqueness was last verified",
                    "title": "lastVerificationDate",
                    "type": "integer"
                },
                "firstVerificationDate": {
                    "description": "Time stamp in integer format of when uniqueness was last verified",
                    "title": "firstVerificationDate",
                    "type": "integer"
                },
                "confidenceScore": {
                    "description": "Confidence score from 0 to 100 that the user is a unique (compared to other users in the database)",
                    "title": "confidenceScore",
                    "type": "integer"
                },
                "captureDevice": {
                    "description": "details of the device used to determine liveness",
                    "title": "captureDevice",
                    "properties": {
                        "deviceType": {
                            "description": "type of device used to capture the user's liveness.",
                            "enum": [
                                "mobile",
                                "laptop",
                                "other"
                            ],
                            "title": "deviceType",
                            "type": "string"
                        },
                        "operatingSystem": {
                            "description": "operating system of the capture device",
                            "title": "operatingSystem",
                            "type": "string"
                        }
                    },
                    "required": [],
                    "type": "object"
                }
            },
            "required": [],
            "type": "object"
        },
        "credentialSchema": {
            "properties": {
                "id": {
                    "format": "uri",
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "type"
            ],
            "type": "object"
        },
        "credentialStatus": {
            "description": "Allows the discovery of information about the current status of the credential, such as whether it is suspended or revoked.",
            "title": "Credential Status",
            "properties": {
                "id": {
                    "description": "Id URL of the credentialStatus.",
                    "title": "Id",
                    "format": "uri",
                    "type": "string"
                },
                "type": {
                    "description": "Expresses the credential status type (method). The value should provide enough information to determine the current status of the credential.",
                    "title": "Type",
                    "type": "string"
                }
            },
            "required": [
                "id",
                "type"
            ],
            "type": "object"
        }
    },
    "required": [
        "@context",
        "id",
        "issuanceDate",
        "issuer",
        "type",
        "credentialSubject",
        "credentialSchema"
    ],
    "type": "object"
}